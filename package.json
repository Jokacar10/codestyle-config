{
  "name": "@so1ve/eslint-config-monorepo",
  "private": true,
  "packageManager": "pnpm@7.30.0",
  "author": "Anthony Fu <anthonyfu117@hotmail.com> (https://github.com/antfu/)",
  "contributors": [
    {
      "name": "Ray <i@mk1.io> (https://github.com/so1ve/)"
    }
  ],
  "description": "Monorepo for Ray's eslint config.",
  "homepage": "https://github.com/so1ve/eslint-config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/so1ve/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/so1ve/eslint-config/issues"
  },
  "license": "MIT",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "release": "bumpp packages/*/package.json --commit --push --tag && pnpm publish -r --filter=./packages/* --no-git-checks",
    "test": "pnpm run -C=./packages/eslint-plugin test",
    "stub": "pnpm run -C=./packages/eslint-plugin stub"
  },
  "devDependencies": {
    "@so1ve/eslint-config": "*",
    "@so1ve/eslint-plugin": "workspace:*",
    "@types/node": "^18.15.11",
    "bumpp": "^9.1.0",
    "eslint": "^8.37.0",
    "typescript": "^5.0.3"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "typescript",
        "svelte"
      ]
    }
  }
}
