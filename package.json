{
  "name": "@so1ve/eslint-config-monorepo",
  "private": true,
  "author": "Anthony Fu <anthonyfu117@hotmail.com> (https://github.com/antfu/)",
  "contributors": [
    {
      "name": "Ray <nn_201312@163.com> (https://github.com/so1ve/)"
    }
  ],
  "description": "Monorepo for Ray's eslint config.",
  "homepage": "https://github.com/so1ve/eslint-config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/so1ve/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/so1ve/eslint-config/issues"
  },
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "bumpp packages/*/package.json --commit --push --tag && pnpm publish -r --filter=./packages/*",
    "test": "pnpm run -r --filter=./packages/* test",
    "stub": "pnpm run -r --filter=./packages/eslint-plugin stub"
  },
  "devDependencies": {
    "@so1ve/eslint-config": "*",
    "@so1ve/eslint-plugin": "workspace:*",
    "bumpp": "^8.2.1",
    "eslint": "^8.31.0",
    "typescript": "^4.9.4"
  }
}
